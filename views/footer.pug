div(style="background-color: grey; color: white; padding : 10px")
    - let f = footer[0]
    div(style="width:33%; display:inline-block")
        div(style="margin-bottom: 10px")
            b=contactSection
        div= f.address
        div=f.phone
        div
            a(href='mailto:' + f.email)= f.email
    div(style="width:33%; display:inline-block;")
        div(style="margin-bottom: 10px;")
            b=aboutSection
        div
            each t in about
                if language==='English'
                    a(href='/en/about-us'): div= t.title
                else if language==='German'
                    a(href='/de/about-us'): div= t.title
    div(style="width:33%; display:inline-block")
        div(style="margin-bottom: 10px")
            b=socialSection
        each fu in f.social
            div
                a(href= fu): span= fu
