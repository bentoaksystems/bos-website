extends layout

block content
            if language === 'English'
                a(href='/de/projects')='Projects'
            else if language === 'German'
                a(href='/en/projects')='Projekte'
            h1= title
            ul
            each project in projects
                h2= project.title
                img(src=project.mainImage.url)(alt="top image")(style="width: 150px; height: 150px")
                h4= project.shortDescription
                hr/
